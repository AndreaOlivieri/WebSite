        = link_to(:profile, class: "menu-li") do
          %span.foto
            = image_tag image_path('/assets/images/menu/profile.png'), class:"menu-img", "data-img-name": "profile", alt:"Profile"
          %span.name Profile
        = link_to(:resume, class: "menu-li") do
          %span.foto
            = image_tag image_path('/assets/images/menu/resume.png'), class:"menu-img", "data-img-name": "resume", alt:"Resume"
